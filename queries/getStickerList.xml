<query id="getStickerList" action="select">
	<tables>
		<table name="sticker" />
		<table name="sticker_files" type="left join">
			<conditions>
				<condition operation="equal" column="sticker_files.sticker_srl" default="sticker.sticker_srl" notnull="notnull" pipe="and" />
				<condition operation="equal" column="sticker_files.no" default="0" notnull="notnull" pipe="and" />
			</conditions>
		</table>
	</tables>
	<columns>
		<column name="sticker.*" />
		<column name="sticker_files.url" alias="main_image" />
	</columns>
	<conditions>
		<condition operation="equal" column="status" default="PUBLIC" var="status" pipe="and" />
		<condition operation="like_prefix" column="regdate" var="s_regdate" pipe="and" />
        <group pipe="and">
            <condition operation="like" column="title" var="s_title" />
            <condition operation="like" column="content" var="s_content" pipe="or" />
            <condition operation="like" column="nick_name" var="s_nick_name" pipe="or" />
            <condition operation="like" column="tag" var="s_tag" pipe="or" />
        </group>
	</conditions>
	<navigation>
		<index var="sort_index" default="sticker.regdate" order="order_type" />
		<list_count var="list_count" default="20" />
		<page_count var="page_count" default="10" />
		<page var="page" default="1" />
	</navigation>
</query>
